{
    "python.defaultInterpreterPath": "./server/djangoenv/bin/python",
    "python.pythonPath": "./server/djangoenv/bin/python",
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "./server/djangoenv/bin/black",
    "python.formatting.blackArgs": [
        "--line-length=79"
    ],
    "python.linting.flake8Path": "./server/djangoenv/bin/flake8",
    "python.linting.flake8Args": [
        "--max-line-length=79",
        "--extend-ignore=E203,W503"
    ],
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "files.associations": {
        "*.py": "python"
    },
    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact"
    ],
    "editor.defaultFormatter": "ms-python.python",
    "[javascript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
        "editor.formatOnSave": true
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
        "editor.formatOnSave": true
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.python",
        "editor.formatOnSave": true
    },
    "python.terminal.activateEnvironment": true,
    "python.terminal.activateEnvInCurrentTerminal": true
}
